# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/arc-backend
MONGODB_TEST_URI=mongodb://localhost:27017/arc-backend-test

# Database Connection Optimization
# Timeout untuk memilih server MongoDB (ms)
DB_SERVER_SELECTION_TIMEOUT=5000
# Timeout untuk operasi socket (ms)
DB_SOCKET_TIMEOUT=45000
# Timeout untuk koneksi awal (ms)
DB_CONNECT_TIMEOUT=10000
# Maksimum koneksi dalam pool
DB_MAX_POOL_SIZE=10
# Minimum koneksi dalam pool
DB_MIN_POOL_SIZE=5
# Waktu idle maksimum sebelum koneksi ditutup (ms)
DB_MAX_IDLE_TIME=30000
# Frekuensi heartbeat untuk monitoring koneksi (ms)
DB_HEARTBEAT_FREQUENCY=10000
# Jumlah percobaan retry koneksi
DB_RETRY_ATTEMPTS=5

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-secret-key-here
JWT_REFRESH_EXPIRES_IN=30d

# MinIO Configuration
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=arc-storage

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-email-password
EMAIL_FROM=your-email@gmail.com
BACKEND_URL=http://localhost:3000

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Payment Gateway (Midtrans)
MIDTRANS_SERVER_KEY=your-midtrans-server-key
MIDTRANS_CLIENT_KEY=your-midtrans-client-key
MIDTRANS_IS_PRODUCTION=false

# App Configuration
APP_NAME=Action Romance Comedy
APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Shipping and Geocoding API Keys (Optional)
# RajaOngkir for Indonesian domestic shipping
RAJAONGKIR_API_KEY=your-rajaongkir-api-key

# Google Maps for geocoding and mapping
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# OpenCage for alternative geocoding
OPENCAGE_API_KEY=your-opencage-api-key

# Instant delivery services
GOJEK_API_KEY=your-gojek-api-key
GRAB_API_KEY=your-grab-api-key

# International shipping
DHL_API_KEY=your-dhl-api-key
FEDEX_API_KEY=your-fedex-api-key

# Default origin location (your warehouse/store)
DEFAULT_ORIGIN_CITY=Jakarta
DEFAULT_ORIGIN_PROVINCE=DKI Jakarta
DEFAULT_ORIGIN_LATITUDE=-6.2088
DEFAULT_ORIGIN_LONGITUDE=106.8456